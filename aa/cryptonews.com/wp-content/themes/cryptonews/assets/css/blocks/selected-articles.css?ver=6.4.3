/* START homepage-block__selected-articles*/
.homepage-block__selected-articles {
    padding: 48px 0;
    background: #211B2E;
    color: #fff;
}
.homepage-block__selected-articles-inner {
    display: grid;
    grid-template-columns: 1fr 3fr;
    gap: 16px 30px;
}
.homepage-block__selected-articles-title {
    color: #fff;
    margin-bottom: 24px;
}
.homepage-block__selected-articles-filter {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    flex-wrap: wrap;
    gap: 12px;
    margin: 0 0 24px;
}
.homepage-block__selected-articles-tag {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6px 12px;
    border: 1px solid #E5C0DA;
    color: #fff;
    gap: 4px;
    flex-wrap: nowrap;
    transition: all 0.3s ease;
    cursor: pointer;
}
.homepage-block__selected-articles-tag .tag-icon {
    display: block;
    width: 16px;
    height: 16px;
}
.homepage-block__selected-articles-tag .tag-icon img {
    vertical-align: baseline
}
.homepage-block__selected-articles-tag.tag-icon .filter-black {
    filter: none;
}
.homepage-block__selected-articles-tag.active .tag-icon .filter-black {
    filter: invert(100%) sepia(100%) saturate(100%) hue-rotate(100deg) brightness(100%) contrast(100%);
}
.homepage-block__selected-articles-tag:not(.active):hover {
    color: #A72E83;
    text-decoration: none;
}
.homepage-block__selected-articles-tag.active {
    color: #211B2E;
    background: #fff;
    border: 1px solid #fff;
}
.homepage-block__selected-articles-tag.active:hover {
    color: #211B2E;
    text-decoration: none;
}
.homepage-block__selected-articles-list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px 30px;
    height: 100%;
}
.homepage-block__selected-articles-text {
    font-family: Noto Sans;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    text-align: left;
}
.homepage-block__selected-articles-text > * {
    margin: 0 0 16px;
}
.homepage-block__selected-articles-text > *:last-child {
    margin-bottom: 0;
}

@media screen and (max-width: 1359px) {
    .homepage-block__selected-articles-list {
        grid-template-columns: repeat(2, 1fr);
    }
}
@media screen and (max-width: 991px) {
    .homepage-block__selected-articles-inner {
        grid-template-columns: none;
        grid-template-row: auto auto;
    }
}
@media screen and (max-width: 767px) {
    .homepage-block__selected-articles {
        padding: 32px 0;
    }
    .homepage-block__selected-articles-inner {
        display: block;
    }
    .homepage-block__selected-articles-aside {
        margin: 0 0 16px;
    }
    .homepage-block__selected-articles-text {
        display: none;
    }
    .homepage-block__selected-articles-list {
        display: block;
        height: auto;
    }
    .homepage-block__selected-articles-list .slick-track {
        display: flex;
    }
    .homepage-block__selected-articles-list .slick-dots li button {
        background: #E8E8E8;
        opacity: .1;
    }
    .homepage-block__selected-articles-list .slick-dots li.slick-active button {
        background: #fff;
        opacity: 1;
    }
    .homepage-block__selected-articles-list .slick-list {
        padding: 0 50px 0 0 !important;
        overflow: visible;
    }
    .homepage-block__selected-articles-list-one {
        padding-right: 16px;
        height: auto;
    }
    .homepage-block__selected-articles-list .slick-slide:not(.slick-current) {
        filter: blur(2px);
        opacity: 0.54;
    }
}
/* END homepage-block__selected-articles*/