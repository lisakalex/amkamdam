.homepage-block__stories {
    padding: 32px 0;
    background: #F3F3F3;
}

.web-stories-list__story {

}

.web-stories-list__story-poster {

}
.homepage-block__stories .web-stories-list {
    margin: 0;
}
.web-stories-list .glider-track .web-stories-list__story-poster:after {
    top: auto;
    bottom: 0;
    height: 40%;
    min-height: 108px;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.7) 32%, #000000 100%);
}
.web-stories-list .glider-track .web-stories-list__story-poster a:before {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    width: 32px;
    height: 32px;
    background: linear-gradient(90.86deg, #591C7E 0.09%, #361775 100%);
    z-index: 1;
}
.web-stories-list .glider-track .web-stories-list__story-poster a:after {
    content: '';
    width: 0;
    height: 0;
    border: 6px solid transparent;
    border-right: none;
    border-left: 12px solid #fff;
    position: absolute;
    top: 9px;
    left: auto;
    right: 9px;
    z-index: 1;
}

.web-stories-list__story-content-overlay {
    padding: 8px;
}

.web-stories-list .glider-track .story-content-overlay__title {
    display: block;
    font-family: Noto Sans;
    font-size: 14px;
    font-weight: 700;
    line-height: 20px;
    text-align: left;
    margin: 0;
    color: #fff;
}
.web-stories-list .glider-track .story-content-overlay__title:not(:last-child) {
    margin-bottom: 4px;
}

.web-stories-list .glider-track .story-content-overlay__author {
    font-family: Noto Sans;
    font-size: 10px;
    font-weight: 400;
    line-height: 10px;
    text-align: left;
    color: #fff;
    opacity: 0.54;
}


.web-stories-list.is-carousel.is-view-type-carousel .glider-prev,
.web-stories-list.is-carousel.is-view-type-carousel .glider-next {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    min-width: 20px;
    padding: 5px;
    content: url(../../../images/pagination-arrow.svg);
    border: 1px solid #E5C0DA;
    border-radius: 0;
    background: none;
    position: absolute;
    bottom: 100%;
    top: auto;
    right: 5px;
    left: auto;
    margin-bottom: 10px;
}
.web-stories-list.is-carousel.is-view-type-carousel .glider-prev {
    right: 35px;
}
.web-stories-list.is-carousel.is-view-type-carousel .glider-prev.disabled,
.web-stories-list.is-carousel.is-view-type-carousel .glider-next.disabled {
    opacity: 0.5;
    cursor: default;
}
.web-stories-list.is-carousel.is-view-type-carousel .glider-prev:not(.disabled):focus,
.web-stories-list.is-carousel.is-view-type-carousel .glider-next:not(.disabled):focus,
.web-stories-list.is-carousel.is-view-type-carousel .glider-prev:not(.disabled):hover,
.web-stories-list.is-carousel.is-view-type-carousel .glider-next:not(.disabled):hover {
    filter: none;
}